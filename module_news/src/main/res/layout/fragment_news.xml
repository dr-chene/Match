<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NewsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.Match">

        <View
            android:id="@+id/news_actionbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/bg_actionbar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/toolbar_margin_bottom"
            android:textColor="@color/white"
            android:text="信息资料"
            android:textSize="@dimen/toolbar_title_size"
            app:layout_constraintBottom_toBottomOf="@id/news_actionbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_search_white"
            app:layout_constraintBottom_toBottomOf="@id/news_actionbar"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/news_actionbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/news_ic_enterprise"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/news_ic_size"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/nian"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toStartOf="@id/news_ic_nation"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/Avatar" />

                <TextView
                    android:id="@+id/news_tv_enterprise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="企业动态"
                    android:textSize="@dimen/news_ic_text_size"
                    app:layout_constraintEnd_toEndOf="@id/news_ic_enterprise"
                    app:layout_constraintStart_toStartOf="@id/news_ic_enterprise"
                    app:layout_constraintTop_toBottomOf="@id/news_ic_enterprise" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/news_ic_nation"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/nian"
                    app:layout_constraintBottom_toBottomOf="@id/news_ic_enterprise"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toStartOf="@id/news_ic_product"
                    app:layout_constraintStart_toEndOf="@id/news_ic_enterprise"
                    app:layout_constraintTop_toTopOf="@id/news_ic_enterprise"
                    app:shapeAppearanceOverlay="@style/Avatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="地区"
                    android:textSize="@dimen/news_ic_text_size"
                    app:layout_constraintEnd_toEndOf="@id/news_ic_nation"
                    app:layout_constraintStart_toStartOf="@id/news_ic_nation"
                    app:layout_constraintTop_toBottomOf="@id/news_ic_nation" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/news_ic_product"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/nian"
                    app:layout_constraintBottom_toBottomOf="@id/news_ic_enterprise"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/news_ic_nation"
                    app:layout_constraintTop_toTopOf="@id/news_ic_enterprise"
                    app:shapeAppearanceOverlay="@style/Avatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="进出口、产销"
                    android:textSize="@dimen/news_ic_text_size"
                    app:layout_constraintEnd_toEndOf="@id/news_ic_product"
                    app:layout_constraintStart_toStartOf="@id/news_ic_product"
                    app:layout_constraintTop_toBottomOf="@id/news_ic_product" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="广告\n alkbsckjabfcolahnflafncaoklucblabclabc\n nskjollkncsljkablfcwnlkjabsclasbkjlkasbc
            \npewjfpwe;mf;sdvgls;dfkmwlefgjerfjbn;vnflwse;vm,; b|nlkanfda1
            \na;ngfdvklsnbdjvkncldsbl31561as"
                    app:layout_constraintTop_toBottomOf="@id/news_tv_enterprise" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>