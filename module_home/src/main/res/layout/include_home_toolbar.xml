<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.Match">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/home_avatar"
            android:layout_width="32dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/nian"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="@id/home_actionbar"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/Avatar" />

        <View
            android:id="@+id/home_actionbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/bg_actionbar"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/home_main"
            layout="@layout/include_home_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/home_actionbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>