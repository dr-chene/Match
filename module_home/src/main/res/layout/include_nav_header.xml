<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:background="@drawable/bg_drawer_header">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/home_drawer_avatar"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:elevation="1dp"
            android:src="@drawable/ic_default_avatar_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/Avatar" />

        <ImageView
            android:id="@+id/home_drawer_ic_exit"
            android:layout_width="25dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintDimensionRatio="1"
            android:src="@drawable/ic_exit_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_drawer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="名字"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/home_drawer_avatar"
            app:layout_constraintTop_toTopOf="@id/home_drawer_avatar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="会员等级"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/home_drawer_name"
            app:layout_constraintTop_toBottomOf="@id/home_drawer_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>