<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.Html" />

        <variable
            name="tech"
            type="com.viper.lib_net.bean.Article" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:theme="@style/Theme.Match">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tech2_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{tech.title, default=汽车零部件再制造规范管理暂行办法}"
                android:textColor="?colorPrimary"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tech2_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@{tech.author, default=国家发改委}"
                android:textColor="@color/blue_800"
                app:layout_constraintEnd_toStartOf="@id/tech2_item_date"
                app:layout_constraintTop_toTopOf="@id/tech2_item_date" />

            <TextView
                android:id="@+id/tech2_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:text="@{tech.date, default=2021_5_28}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tech2_item_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{Html.fromHtml(tech.content), default=sghdfhysrthgsredfgeswrg}"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tech2_item_date" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>